# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Example: postgresql://postgres:password@localhost:5432/ktpm_db
DATABASE_URL="postgresql://postgres:password@localhost:5432/ktpm_db"
DIRECT_URL="postgresql://postgres:password@localhost:5432/ktpm_db"

# ============================================
# JWT Configuration (Required)
# ============================================
# Secret key for JWT token signing
# IMPORTANT: Use a strong, random secret in production
# Generate one with: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# JWT token expiration time
# Examples: "15m", "1h", "7d", "30d"
# See: https://github.com/vercel/ms for format
JWT_EXPIRES_IN="1d"

# ============================================
# Service Ports (Optional)
# ============================================
# Port for auth-service (default: 3001)
AUTH_SERVICE_PORT=3001

# Port for content-service (default: 3002)
CONTENT_SERVICE_PORT=3002

# ============================================
# Database Seed Configuration (Optional)
# ============================================
# Email for default admin user created during seed
# Default: admin@ktpm.edu.vn
ADMIN_EMAIL="admin@ktpm.edu.vn"

# Password for default admin user created during seed
# Default: admin123
# IMPORTANT: Change this in production!
ADMIN_PASSWORD="admin123"

# ============================================
# Environment
# ============================================
# Node environment: development, production, test
# NODE_ENV=development

# ============================================
# Notes
# ============================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Update DATABASE_URL with your PostgreSQL credentials
# 3. Generate a secure JWT_SECRET for production
# 4. Never commit .env file to version control
# 5. The .env file is already in .gitignore
